{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/main",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "noEmit": false,
    "types": ["node"]
  },
  "include": ["src/main/**/*", "src/processing/**/*", "src/types/**/*", "src/platform/**/*", "src/utils/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer"]
}

